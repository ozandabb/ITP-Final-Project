<div class="row">
    <div class="col-sm-3 col-md-3">

        @using (Html.BeginForm("Index", "Allocation/Index", FormMethod.Get))
        {
            <h3>Search</h3>

            <div class="row">
                <div class="col-sm-3 col-md-12">
                    <p>
                        Day:
                        @Html.DropDownList("Day", null, new { @class = "form-control" })
                    </p>
                </div>
            </div>

            <div class="row">

                <div class="col-sm-3 col-md-4">
                    <br />
                    Start Time:

                </div>

                <div class="col-sm-3 col-md-4">
                    hh: @Html.DropDownList("S_Time_hh", null, new { @class = "form-control" })
                </div>

                <div class="col-sm-3 col-md-4">
                    mm: @Html.DropDownList("S_Time_mm", null, new { @class = "form-control" })
                </div>


            </div>



            <div class="row">

                <div class="col-sm-3 col-md-4">
                    <br />
                    End Time:

                </div>

                <div class="col-sm-3 col-md-4">
                    hh: @Html.DropDownList("E_Time_hh", null, new { @class = "form-control" })
                </div>

                <div class="col-sm-3 col-md-4">
                    mm: @Html.DropDownList("E_Time_mm", null, new { @class = "form-control" })
                </div>


            </div>


            @*<p>
                    Start Time: @Html.TextBox("S_Time", null, new { @class = "form-control" })
                </p>
                <p>
                    End Time: @Html.TextBox("E_Time", null, new { @class = "form-control" })
                </p>*@

            <div class="row">
                <div class="col-sm-3 col-md-12">

                    <p>Class name:</p>
                    <p class="help-block">Ex:(P01,P34,S22)</p>

                    @Html.TextBox("C_id", null, new { @class = "form-control" })
                    <p class="help-block">Hint : Fill all data before attempt to search classrooms. </p>
                    <p class="help-block">*Leave class name column empty to filter all classes. </p>
                    <p class="help-block">*time format: hh:mm </p>

                </div>
            </div>


            <p>
                <button type="submit" class="btn btn-primary mb-2" value="Filter">Filter</button>
            </p>
        }


    </div>

    <br />

    <div class="col-sm-3 col-md-9">

        <table id="table_css">
            <tr>
                <th>
                    Allocation Id
                </th>
                <th>
                    Day
                </th>
                <th>
                    Start Time
                </th>
                <th>
                    End Time
                </th>
                <th>
                    No.of Students
                </th>
                <th>
                    Teacher id
                </th>
                <th>
                    Class name
                </th>
                <th>
                    Subject id
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ca_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.day)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.start_time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.end_time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.no_of_students)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.t_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.class_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sub_id)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ca_id })
                        @Html.ActionLink("Details", "Details", new { id = item.ca_id })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ca_id })
                    </td>
                </tr>
            }

        </table>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
