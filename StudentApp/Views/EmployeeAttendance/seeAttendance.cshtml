@model IEnumerable<StudentApp.Models.emp_attendence>

@{
    ViewBag.Title = "seeAttendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #customers {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #0a3d62;
            color: white;
        }

    .logoutbtn {
        background-color: #353b48;
        border: none;
        border-radius: 8px;
        color: white;
        padding: 8px 11px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
</style>

<h2>Search Attendance By Name</h2>

<p>
    @using (Html.BeginForm())
    {
        <text>Name : @Html.Editor("date", new { htmlAttributes = new { @class = "form-control", Type = "date" } })</text>
        <input type="submit" value="See Results" class="btn btn-default" />
    }
</p>

<table class="table" id="customers">
    <tr>
        <th>
            Date
        </th>
        <th>
            Employee Name
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @DateTime.Parse(Html.DisplayFor(modelItem => item.date).ToString()).ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.employee.full_name)
            </td>
        </tr>
    }

</table>
