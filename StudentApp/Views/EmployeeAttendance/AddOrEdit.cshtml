@model StudentApp.Models.emp_attendence

@{
    ViewBag.Title = "AddOrEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddOrEdit</h2>

@using (Html.BeginForm("AddOrEdit", "Stock", FormMethod.Post))
{
    <table>
        <tr>
            <td></td>
            <td style="text-decoration: underline">Mark Attendence</td>
        </tr>

        <tr>
            <td>@Html.DisplayNameFor(model => model.emp_id)</td>
            <td>@Html.DropDownListFor(model => model.emp_id, new SelectList(Model.employeeCollection, "emp_id", "full_name"), "Select")</td>
        </tr>

        <tr>
            <td>@Html.DisplayNameFor(model => model.date)</td>
            <td>@Html.EditorFor(model => model.date)</td>
        </tr>

        <tr>
            <td></td>
            <td><input type="submit" name="name" value="submit" /></td>
        </tr>
    </table>
}
