@model StudentApp.Models.lab


@{
    /**/

    Layout = null;
}
<style>
    .wrapper {
        text-align: center;
    }
</style>


<h2>Save</h2>

@using (Html.BeginForm("save", "ComputerLab", FormMethod.Post, new { id = "popupForm" }))
{


    if (Model != null && Model.LabNo > 0)
    {
        @Html.HiddenFor(a => a.LabNo)

    }
    <div class="form-group">
        <label>Lab No</label>
        @Html.TextBoxFor(b => b.LabNo, new { @class = "form-control " })
        @Html.ValidationMessageFor(a => a.LabNo)
    </div>
    <div class="form-group">
        <label>Floor </label>
        @Html.TextBoxFor(b => b.floor, new { @class = "form-control " })
        @Html.ValidationMessageFor(b => b.floor)
    </div>


    <div class="wrapper">
        <input type="submit" class="btn btn-primary btn-lg" value="Save" />
        <br />   <br />
    </div>
}

