@model StudentApp.Models.repair

@{
    /**/

    Layout = null;
}
<h2>Delete Repair Details.</h2>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

@using (Html.BeginForm("delete", "ComputerRepair", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.repair_id)
    <div class="form-group">
        <label>Machine No</label>
        <p>@Model.MachineNO</p>

        <div class="form-group">
            <label>Reapair ID</label>
            <p>@Model.repair_id</p>
        </div>

        <div class="form-group">
            <label>Cost</label>
            <p>@Model.cost</p>
        </div>

        <div class="form-group">
            <label>Description</label>
            <p>@Model.description</p>
        </div>

        <div class="form-group">
            <label>Date</label>
            <p>@Model.repair_date</p>
        </div>


        <div>
            <br />
            <h4>Confirm?</h4>
            <br />
            <i class="fa fa-trash"></i>
            <input type="submit" class="btn btn-danger btn-sm" value=" Delete" />
            <br />
        </div>

    </div>
}


